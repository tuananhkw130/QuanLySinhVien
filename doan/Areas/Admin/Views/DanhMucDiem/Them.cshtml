@model doan.Models.DanhMucDiem
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm thông tin danh mục điểm</h2>
    </div>
    <form method="post" asp-action="Them">
        <div class="form-group">
            <label asp-for="TenDanhMuc">Tên danh mục</label>
            <input type="text" class="form-control" asp-for="TenDanhMuc">
        </div>
        <div class="form-group">
            <label asp-for="Shortname">Code</label>
            <input type="text" class="form-control" asp-for="Shortname">
        </div>
        <button type="submit" class="btn btn-primary">Thêm</button>
    </form>
</main>

@{
    var summerNote = new doan.Areas.Admin.Models.SummerNote("#MoTa");
    <partial name="_SummerNote" model="summerNote" />
}