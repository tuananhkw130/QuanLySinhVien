@model doan.Models.KhoaVien
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Chỉnh sửa thông tin khoa viện</h2>
    </div>
    <form method="post" asp-action="Sua">
        <input type="hidden" asp-for="ID"/>
        <div class="form-group">
            <label asp-for="MaKhoaVien">Mã khoa viện</label>
            <input type="text" class="form-control" asp-for="MaKhoaVien">
        </div>
        <div class="form-group">
            <label asp-for="TenKhoaVien">Tên khoa viện</label>
            <input type="text" class="form-control" asp-for="TenKhoaVien">
        </div>
        <button type="submit" class="btn btn-primary">Sửa</button>
    </form>
</main>

@{
    var summerNote = new doan.Areas.Admin.Models.SummerNote("#MoTa");
    <partial name="_SummerNote" model="summerNote" />
}