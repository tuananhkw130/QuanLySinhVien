@using doan.Models;
@model IList<KyHoc>
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
	<div class="pagetitle">
		<h2>Danh sách kỳ học</h2>
	</div>
	<p>
		<a type="button" class="btn btn-success" asp-area="Admin" asp-controller="KyHoc" asp-action="Them">
			<i class="bi bi-file-earmark-text me-1"></i>Thêm kỳ học
		</a>
	</p>
	<section class="section dashboard">
		<div class="row">
			<div class="col-12">
				<div class="card recent-sales overflow-auto">
					<div class="card-body mt-4">

						<table class="table table-borderless datatable">
							<thead>
								<tr>
									<th class="col-1 text-center">#</th>
									<th class="col-3 text-center">Kỳ học</th>
									<td class="col-1 text-center">Mở đăng ký</td>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<th class="text-center" scope="row">@item.ID</th>
										<td>
											<a asp-area="Admin" asp-controller="MaHocPhan" asp-action="HienThiSP" asp-route-kyhoc="@item.ID">@item.KyHocStr()</a>
										</td>
										
										<td class="ext-center">
											@if (item.MoDangKyHoc) 
											{
												<a asp-area="Admin" asp-controller="KyHoc" asp-action="ThayDoiDangKyHoc"
											   asp-route-id="@item.ID" class="btn bg-success-light btn-sm"
											   title="Thay đổi trạng thái">
												   <i class="bi bi-check-lg"></i>
												</a>
											} else
											{
												<a asp-area="Admin" asp-controller="KyHoc" asp-action="ThayDoiDangKyHoc"
											   asp-route-id="@item.ID" class="btn btn-danger btn-sm"
											   title="Chỉnh sửa thông tin"><i class="bi bi-pencil"></i></a>
											}

											@*<a asp-area="Admin" asp-controller="KyHoc" asp-action="Sua"
										   asp-route-id="@item.ID" class="btn btn-primary btn-sm"
										   title="Chỉnh sửa thông tin"><i class="bi bi-pencil"></i></a>
											<a asp-area="Admin" asp-controller="KyHoc" asp-action="Xoa"
										   asp-route-id="@item.ID" class="btn btn-danger btn-sm"
										   title="Xóa"><i class="bi bi-trash"></i></a>*@
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>